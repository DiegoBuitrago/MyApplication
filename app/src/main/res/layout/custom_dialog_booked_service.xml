<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <Button
        android:id="@+id/btn_choose_date"
        android:layout_width="163dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        android:background="@drawable/btn_two"
        android:text="Seleccionar Fecha"
        android:textColor="@color/colorWhite" />

    <TextView
        android:id="@+id/txt_title_date_service"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Fecha"
        android:inputType="textPersonName"
        android:padding="13dp" />
    <TextView
        android:id="@+id/txt_date_service"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:padding="13dp" />

    <TextView
        android:id="@+id/txt_title_hour_service"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Hora"
        android:inputType="textPersonName"
        android:padding="13dp" />

    <Spinner
        android:id="@+id/sp_hour_serivce"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="13dp"
        android:spinnerMode="dropdown" />

    <TextView
        android:id="@+id/txt_title_type_service"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tipo de Servcio"
        android:inputType="textPersonName"
        android:padding="13dp" />

    <Spinner
        android:id="@+id/sp_type_service"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:entries="@array/types"
        android:padding="13dp"
        android:spinnerMode="dropdown"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <Button
        android:id="@+id/btn_cancel_service"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:layout_marginEnd="5dp"
        android:padding="15dp"
        android:background="@drawable/btn_two"
        android:text="@string/cancel"
        android:textColor="@color/colorWhite" />

        <Button
            android:id="@+id/btn_accept_service"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="5dp"
            android:padding="15dp"
            android:layout_weight="1"
            android:background="@drawable/btn_two"
            android:text="@string/accept"
            android:textColor="@color/colorWhite" />
    </LinearLayout>

</LinearLayout>