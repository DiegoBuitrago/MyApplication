<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/md_blue_100"
    android:orientation="vertical"
    android:padding="16dp">

    <EditText
        android:id="@+id/txt_input_name_product"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:hint="Nombre del producto"
        android:inputType="textPersonName"
        android:padding="13dp" />

    <EditText
        android:id="@+id/txt_input_desc_product"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Descripcion del producto"
        android:inputType="textPersonName"
        android:padding="13dp" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="277dp"
        android:layout_height="147dp"
        android:layout_gravity="center"
        app:srcCompat="@drawable/photo_user" />

    <Button
        android:id="@+id/btn_choose_img_product"
        android:layout_width="147dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        android:background="@drawable/btn_two"
        android:text="Agregar Imagen"
        android:textColor="@color/colorWhite"/>
        <!--android:textColor="@drawable/txt_btn_two"-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_cancel_add_product"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="5dp"
            android:layout_weight="1"
            android:background="@drawable/btn_two"
            android:padding="15dp"
            android:text="@string/cancel"
            android:textColor="@color/colorWhite" />

        <Button
            android:id="@+id/btn_add_product_to_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginBottom="5dp"
            android:layout_weight="1"
            android:background="@drawable/btn_two"
            android:padding="15dp"
            android:text="@string/accept"
            android:textColor="@color/colorWhite" />
    </LinearLayout>
</LinearLayout>